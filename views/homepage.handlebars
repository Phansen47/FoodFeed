{{!-- code to start from MVC mini project --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>


<div class="row mt-4">

  {{#if recipes.length}}
  <div class="col-md-6 recipe-list">
    <h3>My Recipes:</h3>
    {{#each recipes as |recipe|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{recipe-name}}</h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm" data-id="{{recipe.id}}">VIEW</button>
        <button class="btn btn-sm btn-danger" data-id="{{recipe.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>